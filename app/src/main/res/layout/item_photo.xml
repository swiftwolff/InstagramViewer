<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/imgPhoto"
        android:src="@drawable/loading"
        android:layout_below="@+id/imgProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/caption_default_text"
        android:id="@+id/tvCaption"
        android:layout_below="@+id/imgHeart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is default profile name"
        android:textColor="#48729A"
        android:textStyle="bold"
        android:id="@+id/tvProfile"
        android:layout_above="@+id/imgPhoto"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_toEndOf="@+id/imgProfile"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imgHeart"
        android:scaleType="fitXY"
        android:layout_below="@+id/imgPhoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/heart"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#5CACEB"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/imgPhoto"
        android:layout_toRightOf="@+id/imgHeart"
        android:layout_toEndOf="@+id/imgHeart"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>